{
    // Enables pop-up that shows parameter documentation and type information as you type
    "editor.parameterHints": false,
    "window.menuBarVisibility": "hidden",
    // Enable word wrapping
    "editor.wordWrap": "bounded",
    // Controls if the editor shows CodeLens
    "editor.codeLens": false,
    // Controls if the minimap is shown
    "editor.minimap.enabled": false,
    "git.enableSmartCommit": true,
    "workbench.startupEditor": "newUntitledFile",
    "git.confirmSync": false,
    "git.autofetch": true,
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.fontFamily": "'Fira Mono','Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "window.zoomLevel": 0,
    // Markdown settings
    "[markdown]": {
        "editor.wordWrap": "bounded",
        "editor.quickSuggestions": false,
        "files.trimTrailingWhitespace": false
    },
    "markdown.extension.italic.indicator": "_",
    // cSpell settings
    "cSpell.language": "en-GB",
    "cSpell.userWords": [
        "WhatsApp",
    ],
    // Status bar settings
    "workbench.colorCustomizations": {
        "statusBar.background": "#1A1A1A"
    }
}